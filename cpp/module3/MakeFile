# Makefile for Module 3 - Recommendations & Analytics
# C++ Backend Compilation

CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra -O2
TARGET = module3
SOURCES = graph.cpp recommendations.cpp main.cpp
OBJECTS = $(SOURCES:.cpp=.o)

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJECTS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(TARGET)

run: $(TARGET)
	./$(TARGET)

test: $(TARGET)
	@echo "Testing Module 3..."
	./$(TARGET) load ../../../Data/sample_snippets.csv.csv
	./$(TARGET) rec_tag "algorithm" ../../../Data/sample_snippets.csv.csv 5
	./$(TARGET) top_snippets ../../../Data/sample_snippets.csv.csv 10
	./$(TARGET) trending_tags ../../../Data/sample_snippets.csv

.PHONY: all clean run test